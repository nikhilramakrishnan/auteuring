---
// Theme toggle component with sun/moon icons
---

<button
  id="theme-toggle"
  type="button"
  aria-label="Toggle theme"
  class="p-2 rounded-lg hover:bg-[var(--gray-100)] transition-colors duration-200"
>
  <!-- Moon icon (shown in light mode) -->
  <svg
    class="w-5 h-5 moon-icon"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
    />
  </svg>
  <!-- Sun icon (shown in dark mode) -->
  <svg
    class="w-5 h-5 sun-icon hidden"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
    stroke-width="2"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
    />
  </svg>
</button>

<script>
  function initThemeToggle() {
    const toggles = document.querySelectorAll('#theme-toggle');

    function isDarkMode() {
      return document.documentElement.classList.contains('theme-dark') ||
        (!document.documentElement.classList.contains('theme-light') &&
         window.matchMedia('(prefers-color-scheme: dark)').matches);
    }

    function updateAllIcons() {
      const dark = isDarkMode();
      toggles.forEach(toggle => {
        const moonIcon = toggle.querySelector('.moon-icon');
        const sunIcon = toggle.querySelector('.sun-icon');
        moonIcon?.classList.toggle('hidden', dark);
        sunIcon?.classList.toggle('hidden', !dark);
      });
    }

    // Set initial state
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme) {
      document.documentElement.classList.remove('theme-light', 'theme-dark');
      document.documentElement.classList.add(`theme-${savedTheme}`);
    }
    updateAllIcons();

    // Handle toggle click on all buttons
    toggles.forEach(toggle => {
      toggle.addEventListener('click', () => {
        const dark = isDarkMode();
        const newTheme = dark ? 'light' : 'dark';

        document.documentElement.classList.remove('theme-light', 'theme-dark');
        document.documentElement.classList.add(`theme-${newTheme}`);
        localStorage.setItem('theme', newTheme);
        updateAllIcons();
      });
    });
  }

  // Run on initial load
  initThemeToggle();

  // Re-run after view transitions
  document.addEventListener('astro:after-swap', initThemeToggle);
</script>
